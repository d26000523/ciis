<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minxuan.socialprojectv2.MQTT.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="23px"
            android:paddingRight="23px"
            android:paddingTop="11.5px"
            android:descendantFocusability="blocksDescendants"
            android:paddingBottom="11.5px" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Loading"
                android:id="@+id/mqttip"
                android:textColor="#EEEE00"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="6dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#40000000"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Loading"
                android:textColor="#E0E0E0"
                android:id="@+id/mqttid"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_below="@+id/mqttip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#40000000"
                android:paddingTop="0dp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
